@model RestaurantRecipeManager.ViewModels.RecipeVM

@{
    ViewData["Title"] = "Edit " + @ViewBag.Recipe.Name;
}


<div class="text-center">
    <h1 class="">Edit @ViewBag.Recipe.Name</h1>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col d-flex justify-content-center">
            <form method="post" asp-area="" asp-controller="Recipe" asp-action="ApplyNameEdit">
                <!-- <input type="hidden" name="_method" value="put" /> Override not Working-->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="number" asp-for="RId" class="form-control d-none" value="@ViewBag.Recipe.RId" />
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" value="@ViewBag.Recipe.Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-area="" asp-controller="Recipe" asp-action="View" asp-route-id="@ViewBag.Recipe.RId" class="btn btn-danger">Cancel</a>
                </div>
            </form>
        </div>
    </div>
    </div>